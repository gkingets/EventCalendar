<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/tutorial_image_1"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/im_thank_you"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanks for downloading!"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/tutorial_image_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/tutorial_next_button_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="@color/md_theme_dark_inversePrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/tutorial_next_button_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="@dimen/tutorial_circle"
            android:layout_height="@dimen/tutorial_circle"
            android:background="@drawable/view_small_circle_false"/>
        <Space
            android:layout_width="@dimen/tutorial_circle"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="@dimen/tutorial_circle"
            android:layout_height="@dimen/tutorial_circle"
            android:background="@drawable/view_small_circle_true"/>

        <Space
            android:layout_width="@dimen/tutorial_circle"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="@dimen/tutorial_circle"
            android:layout_height="@dimen/tutorial_circle"
            android:background="@drawable/view_small_circle_true"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>