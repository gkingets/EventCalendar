<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/margin_grid"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SearchFragment">

    <ImageView
        android:id="@+id/search_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/search"
        android:scaleType="centerCrop"
        tools:ignore="MissingConstraints" />
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginRight="@dimen/margin_grid"
        android:layout_marginLeft="@dimen/margin_grid"
        android:layout_marginTop="108dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"/>

    <GridView
        android:id="@+id/search_grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="108dp"
        android:layout_marginRight="@dimen/margin_grid"
        android:layout_marginLeft="@dimen/margin_grid"
        android:horizontalSpacing="@dimen/margin_grid"
        android:verticalSpacing="@dimen/margin_grid"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/search_image"/>
</androidx.constraintlayout.widget.ConstraintLayout>