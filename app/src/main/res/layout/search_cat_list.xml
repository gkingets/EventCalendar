<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="@dimen/margin_min"
        android:layout_marginLeft="@dimen/margin_min"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="3"
        app:cardCornerRadius="10dp"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:id="@+id/search_cat_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/search_cat_list_color"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/md_theme_light_primary"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/search_cat_list_date"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="15"
                    android:text="date"
                    android:autoSizeTextType="uniform"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/search_cat_list_left"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:text="Left"
                    android:autoSizeTextType="uniform"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_dark_inversePrimary"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="15"
                    android:text="Days"
                    android:paddingTop="-30dp"
                    android:autoSizeTextType="uniform"
                    android:textColor="?attr/colorPrimary"
                    android:gravity="center|top"/>

            </LinearLayout>

            <TextView
                android:id="@+id/search_cat_list_title"
                android:layout_width="1dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:text="title"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="18dp"
                android:textSize="16dp"
                android:gravity="left|center"/>

            <ImageButton
                android:id="@+id/search_cat_list_copy"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_copy"
                android:backgroundTint="?attr/colorOutline" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>