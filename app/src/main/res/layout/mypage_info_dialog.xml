        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/mypage_info_image">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feedback_form"
            android:textSize="@dimen/info_fontsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autoLink="web"
            android:text="https://forms.gle/Lkj4WUuxJy5ULi5b7"
            android:textSize="@dimen/info_fontsize" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Google Play Store"
            android:textSize="@dimen/info_fontsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autoLink="web"
            android:text="https://play.google.com/store/apps/details?id=com.magic.eventcalendar"
            android:textSize="@dimen/info_fontsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terms_of_service"
            android:textSize="@dimen/info_fontsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autoLink="web"
            android:text="shorturl.at/epIM8"
            android:textSize="@dimen/info_fontsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/privacy_policy"
            android:textSize="@dimen/info_fontsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autoLink="web"
            android:text="shorturl.at/gyJMQ"
            android:textSize="@dimen/info_fontsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Designed by Freepik : Thank you for your help!"
