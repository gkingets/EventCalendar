<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/search_cat_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/shopping"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/search_cat_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="#60515050"
        android:gravity="center"
        android:shadowColor="#373737"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="10"
        android:text="comedy"
        android:textColor="#fff"
        android:textSize="40dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@id/search_cat_image"
        app:layout_constraintEnd_toEndOf="@id/search_cat_image"
        app:layout_constraintEnd_toStartOf="@id/search_cat_image"
        app:layout_constraintTop_toTopOf="@id/search_cat_image"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/search_cat_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_back_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_cat_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_cat_image"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>