<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MypageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mypage_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/md_theme_dark_primary"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/mypage_app_store"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoLink="web"
            android:text="https://play.google.com/store/apps/details?id=com.magic.eventcalendar"
            android:textColor="@color/md_theme_dark_primary"
            android:src="@drawable/mypage"
            android:scaleType="centerCrop"
            android:textSize="0.1dp"/>

        <LinearLayout
            android:id="@+id/mypage_button_layout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center|top"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/mypage_mypage"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="My Page"
                android:textSize="10dp"
                android:visibility="visible"/>
            <Button
                android:id="@+id/mypage_login"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ログイン"
                android:textSize="10dp"
                android:visibility="gone"/>

            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/mypage_logout"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#83656565"
                android:text="@string/logout"
                android:textSize="10dp"
                android:visibility="gone" />

        </LinearLayout>

        <Button
            android:id="@+id/mypage_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/mypage_info"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_info"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/mypage_card_pie_chart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/margin_create"
        android:layout_marginRight="@dimen/margin_create"
        android:layout_marginLeft="@dimen/margin_create"
        app:cardCornerRadius="10dp"
        android:outlineSpotShadowColor="?attr/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/mypage_image"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/idPieChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/mypage_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="30dp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/idPieChart"
                app:layout_constraintBottom_toBottomOf="@+id/idPieChart"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/mypage_card_bar_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_create"
        android:layout_marginRight="@dimen/margin_create"
        android:layout_marginLeft="@dimen/margin_create"
        app:cardCornerRadius="10dp"
        android:outlineSpotShadowColor="?attr/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/mypage_card_pie_chart"
        android:visibility="gone">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/idBarChart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_create"
        android:layout_marginRight="@dimen/margin_create"
        android:layout_marginLeft="@dimen/margin_create"
        android:layout_marginBottom="@dimen/margin_create"
        app:cardCornerRadius="10dp"
        android:outlineSpotShadowColor="?attr/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/mypage_card_bar_chart"
        app:layout_constraintBottom_toBottomOf="parent">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mypage_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            >
        </androidx.recyclerview.widget.RecyclerView>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>