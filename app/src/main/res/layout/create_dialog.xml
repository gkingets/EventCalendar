<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/create_dialog_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_create"
            android:layout_marginRight="@dimen/margin_create"
            android:layout_marginLeft="@dimen/margin_create">

            <Button
                android:id="@+id/create_dialog_btn_calendar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="@string/go_to_calendar"
                android:textColor="@color/md_theme_dark_background"
                android:backgroundTint="@color/md_theme_dark_onSurfaceVariant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/create_dialog_btn_back"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="@string/keep_creating"
                android:textColor="@color/md_theme_dark_background"
                android:backgroundTint="@color/md_theme_dark_onSurfaceVariant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </LinearLayout>


        <Button
            android:id="@+id/create_dialog_btn_google_calendar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/margin_min"
            android:layout_marginBottom="@dimen/margin_min"
            android:layout_marginRight="@dimen/margin_create"
            android:layout_marginLeft="@dimen/margin_create"
            android:text="@string/register_to_calendar_app"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>